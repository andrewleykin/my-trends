.remodal.order(data-remodal-id="order")
	button.remodal-close.order__close(data-remodal-action="close")
	.order__wrap
		span.order__subtitle= content.order.subtitle
		h4.order__title= content.order.title
		form.form.order__form(data-validation='' method="POST" action=content.order.formAction)
			each form in content.order.form
				.order__group
					input.order__input(type= form["type"], name=form["name"], id=form["id"], data-name=form["name"])
					label.order__label.label(for=form["id"])= form["label"]
			button.order__btn(type="submit")= content.order.btn
