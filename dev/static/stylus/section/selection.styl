.selection
	padding 75px 0 60px
	background gray-color
	color dark-color
	margin-bottom 65px

.selection__wrap
	display flex
	justify-content center

.selection__info
	text-align right
	max-width 325px
	margin-right 25px

.selection__pretitle
	display inline-block
	padding-bottom 16px
	border-bottom 6px solid red-color
	margin-bottom 15px
	font-size 24px
	line-height 24px
	font-weight 700
	text-transform uppercase

.selection__title
	font-size 48px
	line-height 44px
	font-weight 900
	color blue-color
	margin-bottom 40px

.selection__subtitle
	font-size 20px
	line-height 32px
	font-weight 700
	margin-bottom 25px

.selection__text
	max-width 310px
	margin-left auto
	font-size 16px
	line-height 18px

.selection__descr
	margin-left 25px

.selection__call,
.selection__fill
	display block
	font-size 16px
	line-height 18px
	margin-bottom 15px

.selection__phone
	display block
	margin-bottom 25px
	font-weight 900
	font-size 41px
	color #3d3d3d
	span
		font-size 55px
		display inline-block
		margin-left 10px

.selection__form
	max-width 430px

.selection__group
	position relative
	width 100%
	&+&
		margin-top 10px

.selection__input
	height 70px
	padding-left 30px
	width 100%
	border 1px solid #9da7ad
	border-radius 5px
	@extend .trs
	&:focus
		border-color blue-color
		&+.selection__label
			opacity 0

.selection__label
	position absolute
	left 30px
	top 28px
	color #6a6a6a
	font-size 14px
	@extend .trs

.selection__btn
	background blue-color
	color white
	max-width 100% 
	text-align center
	font-size 18px
	line-height 24px
	font-weight 700
	padding 11px 95px
	text-transform uppercase
	cursor pointer
	border-radius 5px
	margin-top 10px
	@extend .trs
	&:hover,&:focus
		background darken(blue-color, 20%) 