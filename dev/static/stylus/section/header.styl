.header
	position fixed
	box-shadow 0 0 24px 0 rgba(0, 0, 0, .3)
	top 0
	left 0
	right 0
	z-index 5
	background white 

.header__wrap
	padding 15px 0px 15px 80px
	display flex
	justify-content space-between
	align-items center

.header__logo
	cursor pointer

.header__menu
	margin-left 100px

.header__mail
	margin-left auto
	margin-right 45px
	.icon
		size(14px,10px)
		margin-right 10px

.header__phone
	display flex
	align-items flex-end
	font-weight 900
	font-size 18px
	margin-bottom 10px
	span
		font-size 24px
		display block
		margin-left 5px

.header__graphic
	font-size 15px