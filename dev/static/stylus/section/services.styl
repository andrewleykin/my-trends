.services
	margin-bottom 65px

.services__wrap
	display flex
	flex-wrap wrap
	justify-content space-between

.services__item
	max-width 270px
	margin-bottom 30px
	text-align center
	font-size 14px
	line-height 18px

.services__image
	position relative
	overflow hidden
	margin-bottom 25px
	img
		@extend .trs
	&:hover
		img
			transform scale(1.1)
		.services__order
			opacity 1
			visibility visible

.services__order
	display flex
	justify-content center
	align-items center
	text-transform uppercase
	font-weight 700
	color: #fff
	background rgba(red-color, 0.88)
	absolute-all(0)
	size(100%)
	opacity 0
	visibility hidden
	@extend .trs

.services__name
	text-transform uppercase
	font-weight 900

.srevices__cost
	display block
	color red-color
	font-weight 900

.services__descr
	max-width 570px
	color dark-color
	position relative
	width 100%

.services__el
	position absolute
	top 0
	left 0
	opacity 0
	visibility hidden
	@extend .trs
	&--active
		opacity 1
		visibility visible

.services__subname
	display block
	font-size 20px
	line-height 24px
	font-weight 700
	max-width 291px
	margin-bottom 15px
	text-transform uppercase

.services__text
	font-size 16px
	line-height 20px