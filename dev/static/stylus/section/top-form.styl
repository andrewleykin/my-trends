.top-form
	margin-bottom 90px

.top-form__wrap
	background purple-color
	display flex
	align-items center
	padding 40px 20px 38px

.top-form__title
	text-align right
	font-weight 700
	margin-right 22px
	max-width 274px
	width 100%
	color white
	font-size 20px
	line-height 20px

.top-form__form
	display flex
	width 100%

.top-form__group
	position relative
	width 100%
	max-width 300px
	&+&
		margin-left 20px

.top-form__input
	padding-left 14px
	height 40px
	color black-color
	font-size 14px
	width 100%
	border-radius 4px
	border 2px solid #9da7ad
	@extend .trs
	&:focus
		border-color blue-color
		&+.top-form__label
			opacity 0

.top-form__label
	color #6a6a6a
	font-size 14px
	position absolute
	left 14px
	top 14px
	@extend .trs

.top-form__btn
	display block
	margin-left 15px
	border 2px solid #9da7ad
	background white
	color #402e20
	font-weight 700
	text-transform uppercase
	padding 10px 52px 8px
	cursor pointer
	border-radius 4px
	@extend .trs
	&:hover,&:focus
		border-color blue-color