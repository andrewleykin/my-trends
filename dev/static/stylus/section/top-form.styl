.top-form
	margin-bottom 90px
	@media ({screen-sm})
		margin-bottom 50px

.top-form__wrap
	background purple-color
	display flex
	align-items center
	padding 40px 20px 38px
	@media ({screen-lg})
		min-width calc( 100% + 20px )
		margin-left -10px
	@media ({screen-xl})
		display block
	@media ({screen-sm})
		padding 30px 20px 25px

.top-form__title
	text-align right
	font-weight 700
	margin-right 22px
	max-width 274px
	width 100%
	color white
	font-size 20px
	line-height 20px
	@media ({screen-xl})
		margin-right 0
		margin-bottom 40px
		font-size 44px
		line-height 44px
		max-width 100%
	@media ({screen-md})
		margin-bottom 70px
	@media ({screen-sm})
		font-size 24px
		line-height 28px
		margin-bottom 40px
		max-width 247px
		margin-left auto

.top-form__form
	display flex
	width 100%
	@media ({screen-md})
		display block

.top-form__group
	position relative
	width 100%
	max-width 300px
	&+&
		margin-left 20px
	@media ({screen-md})
		max-width 700px
		&+&
			margin-left 0
			margin-top 55px
	@media ({screen-sm})
		&+&
			margin-top 20px

.top-form__input
	padding-left 14px
	height 40px
	color black-color
	font-size 14px
	width 100%
	border-radius 4px
	border 2px solid #9da7ad
	@extend .trs
	&:focus
		border-color blue-color
		&+.top-form__label
			opacity 0
	@media ({screen-md})
		height 86px
		font-size 30px
	@media ({screen-sm})
		height 50px
		font-size 24px

.top-form__label
	color #6a6a6a
	font-size 14px
	position absolute
	left 14px
	top 14px
	@extend .trs
	@media ({screen-md})
		font-size 30px
		top 32px
	@media ({screen-sm})
		font-size 24px
		top 15px

.top-form__btn
	display block
	margin-left 15px
	border 2px solid #9da7ad
	background white
	color #402e20
	font-weight 700
	text-transform uppercase
	padding 10px 52px 8px
	cursor pointer
	border-radius 4px
	@extend .trs
	&:hover,&:focus
		border-color blue-color
	@media ({screen-md})
		margin-left auto
		margin-top 50px
		background red-color
		border none
		color white
		font-size 34px
		padding 30px 40px
		&:hover,&:focus
			border-color red-color
			background darken(red-color, 20%)
	@media ({screen-sm})
		margin-top 20px
		font-size 22px
		padding 15px 20px