.reviews
	margin-bottom 90px
	@media ({screen-md})
		margin-bottom 50px
	@media ({screen-sm})
		margin-bottom 30px

.reviews__title
	text-align center
	font-size 48px
	line-height 44px
	font-weight 900
	margin-bottom 75px
	span
		display block
	@media ({screen-md})
		margin-bottom 60px
	@media ({screen-sm})
		font-size 36px
		line-height 38px
		margin-bottom 30px

.reviews__list
	display flex
	justify-content space-between
	@media ({screen-md})
		flex-wrap wrap

.reviews__item
	max-width 195px
	text-align center
	&:nth-child(2),
	&:nth-child(3)
		max-width 245px
	@media ({screen-md})
		width 100%
		max-width 50%
		margin-bottom 20px
		&:nth-child(2),
		&:nth-child(3)
			max-width 50%

.reviews__image
	margin-bottom 30px
	cursor pointer
	@media ({screen-md})
		margin-bottom 15px
	@media ({screen-sm})
		max-width 80%
		margin 0 auto 15px

.reviews__text
	font-size 18px

.reviews__popup
	padding 0