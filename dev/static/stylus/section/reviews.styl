.reviews
	margin-bottom 90px

.reviews__title
	text-align center
	font-size 48px
	line-height 44px
	font-weight 900
	margin-bottom 75px
	span
		display block

.reviews__list
	display flex
	justify-content space-between

.reviews__item
	max-width 195px
	text-align center
	&:nth-child(2),
	&:nth-child(3)
		max-width 245px

.reviews__image
	margin-bottom 30px
	cursor pointer

.reviews__popup
	padding 0