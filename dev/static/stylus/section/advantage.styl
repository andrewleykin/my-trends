.advantage
	margin-bottom 50px
	@media ({screen-sm})
		margin-bottom 30px

.advantage__wrap
	display flex
	justify-content space-around
	@media ({screen-lg})
		justify-content space-between
		flex-wrap wrap

.advantage__item
	max-width 222px
	@media ({screen-lg})
		width 100%
		max-width 49%
		margin-bottom 65px
	@media ({screen-sm})
		margin-bottom 40px

.advantage__icon
	height 128px
	margin-bottom 60px
	flex-center()
	@media ({screen-lg})
		margin-bottom 25px
	@media ({screen-sm})
		max-width 70%
		margin 0 auto 15px
		height 90px

.advantage__text
	font-size 18px
	line-height 20px
	font-weight 900
	text-transform uppercase
	span.red
		display block
	span.nowrap
		display inline-block
	@media ({screen-lg})
		max-width 280px
		margin 0 auto
	@media ({screen-md})
		font-size 24px
		line-height 26px
		font-weight 400
	@media ({screen-sm})
		font-size 18px
		line-height 20px